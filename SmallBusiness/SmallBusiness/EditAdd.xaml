<Window x:Class="SmallBusiness.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmallBusiness"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Сохранить изменения" Grid.Column="3" Grid.Row="4" Click="SaveToDatabase"/>
        <TextBox x:Name="ArticleField" Text="" Grid.Row="4" Grid.Column="1" Background="Yellow"/>
        <TextBox x:Name="DescField" Text="" Grid.Column="1" Grid.Row="3" Background="Blue"/>
        <TextBox x:Name="ManufacturerField" Text="" Grid.Column="1" Grid.Row="2" Background="Yellow"/>
        <TextBox x:Name="NameField" Text="" Grid.Row="0" Grid.Column="1" Background="Yellow"/>
        <TextBox x:Name="PriceField" Text="" Grid.Column="1" Grid.Row="1" Background="Blue"/>
        <Label Content="Имя:" Grid.Column="0" Grid.Row="0" FontSize="30" />
        <Label Content="Цена:" Grid.Column="0" Grid.Row="1" FontSize="30"/>
        <Label Content="Производитель:" Grid.Column="0" Grid.Row="2" FontSize="25"/>
        <Label Content="Описание:" Grid.Column="0" Grid.Row="3" FontSize="30"/>
        <Label Content="Артикул:" Grid.Column="0" Grid.Row="4" FontSize="30"/>

    </Grid>
</Window>
